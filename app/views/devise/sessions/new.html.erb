<div class="card-header shadow-sm">
  <div class="row align-items-start border-bottom border-light p-3 small-text text-muted">
    <div class="col-2 align-items-start pt-1">
      <h2>Log in</h2>
    </div>
    <div class="col text-end">
      <p class="text-muted  small-text">Welcome to your to-do list. </p>
    </div>
  </div>
</div>
<div id="tags" class="card-body">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name, class: 'form')) do |f| %>
    <div class="mb-3">
      <%= f.label :email, class: 'form-label pt-3' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, class: 'form-label' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-3">
        <%= f.check_box :remember_me, class: 'form-check-input' %>
        <%= f.label :remember_me, class: 'form-check-label' %>
      </div>
    <% end %>

    <div class="mb-3">
      <%= f.submit "Log in", class: 'btn btn-primary px-4 rounded-3' %>
    </div>
  <% end %>

  <div class="mb-3">
    <%= render "devise/shared/links" %>
  </div>

</div>