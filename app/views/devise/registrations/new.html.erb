
<div class="card-header shadow-sm">
  <div class="row align-items-start border-bottom border-light p-3 small-text text-muted">
    <div class="col-2 align-items-start pt-1">
      <h2>Sign up</h2>
    </div>
    <div class="col text-end">
      <p class="text-muted  small-text">Welcome to your to-do list. </p>
    </div>
  </div>
</div>
<div id="tags" class="card-body">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name, class: 'form')) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: 'form-label pt-3' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :password, class: 'form-label pt-3' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: 'form-label pt-3' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.submit "Sign up", class: 'btn btn-primary px-4 rounded-3' %>
    </div>
  <% end %>

  <div class="mb-3">
    <%= render "devise/shared/links" %>
  </div>

</div>